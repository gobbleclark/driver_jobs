<h1>Add Job</h1>
<br />
<%= form_with(model: @job, local: true) do |f|%>
    <div class="field">
        <%= f.label :description %>
        <%= f.text_field :description, required: true, placeholder: "details" %>
    </div>

    <div class="field">
        <%= f.label :start_date %>
        <%= f.text_field :start_date, placeholder: "enter date" %>
    </div>

     <div class="field">
        <%= f.label :deliver_date %>
        <%= f.text_field :deliver_date, placeholder: "enter date" %>
    </div>
    
    <div class="field">
        <%= f.label :miles %>
        <%= f.text_field :miles, placeholder: "distance" %>
    </div>

    <div class="field">
        <%= f.label :earnings %>
        <%= f.number_field :earnings, placeholder: "enter amount" %>
    </div>


    <%= f.submit "Create Job", class: "btn darken  green"%>

    <%end%>

